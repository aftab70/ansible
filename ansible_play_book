############################################ Ansible Playbook to install Apache2 in ubuntu 16.04 #################################
# nano ~/ansible/apache2.yml

---------------------------------------------------------------------------------------------------------------------------------

- hosts: 192.168.0.33
  become: yes
  become_user: root
  become_method: sudo
  tasks:
    - name: install apache2
      #apt: name=apache2 state=latest
      shell: apt install apache2 -y
      
----------------------------------------------------------------------------------------------------------------------------------

Save and exit

ansible-playbook ~/ansible-playbook/apache2.yml -k -K



###################################################################################################################################

